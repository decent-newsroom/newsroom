<turbo-frame id="profile-tab-content">
    <div class="w-container bookmarks-container">
        {% if isOwner|default(false) %}
            {% if bookmarks|default([])|length > 0 %}
                <div class="bookmarks-list">
                    {% for bookmark in bookmarks %}
                        <div class="bookmark-item card">
                            <div class="bookmark-header">
                                <span class="bookmark-kind-badge">{{ bookmark.listType }}</span>
                                {% if bookmark.listType != 'Bookmarks' %}
                                    <h3>{{ bookmark.title ?? bookmark.identifier ?? 'Untitled List' }}</h3>
                                {% endif %}
                                <div class="bookmark-meta">
                                    <small class="text-muted">Created: {{ bookmark.createdAt|date('M d, Y') }}</small>
                                </div>
                                {% if bookmark.description %}
                                    <p class="bookmark-description text-muted">{{ bookmark.description }}</p>
                                {% endif %}
                                {% if bookmark.image %}
                                    <img src="{{ bookmark.image }}" alt="{{ bookmark.title ?? 'List image' }}" class="bookmark-image" />
                                {% endif %}
                            </div>

                            {% if bookmark.items|length > 0 %}
                                <div class="bookmark-items-count">
                                    <small class="text-muted">{{ bookmark.items|length }} item{{ bookmark.items|length > 1 ? 's' : '' }}</small>
                                </div>

                                <ul class="bookmark-items-list">
                                    {% for item in bookmark.items %}
                                        {% if item.type == 'a' %}
                                            <twig:Organisms:ArticleFromCoordinate :coordinate="item.value" />
                                        {% endif %}
                                        <li class="bookmark-item-entry">
                                            <span class="tag">{{ item.type }}</span> - <span>{{ item.value }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="empty-list text-muted">No items in this list</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="no-content">
                    <p>You don't have any bookmarks yet.</p>
                    <small class="text-muted">Fetching bookmarks from your home relays...</small>
                </div>
            {% endif %}
        {% else %}
            <div class="no-content">
                <p>Bookmarks are private and only visible to the owner.</p>
            </div>
        {% endif %}
    </div>
</turbo-frame>
