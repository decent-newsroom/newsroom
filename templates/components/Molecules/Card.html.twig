<{{ tag }} {{ attributes }}>
    <div class="card-header"><small class="text-uppercase">{{ category }}</small></div>
    <div class="card-body">
        <small>{{ article.createdAt|date('F j') }}</small>
        <h1 class="card-title">{{ article.title }}</h1>
    </div>
    <div class="card-footer">
        <small>{{ article.author }}</small>
    </div>
</{{ tag }}>
