<div {{ attributes }}>
<!-- Navigation Tabs -->
    <ul class="nav nav-tabs">
        {% for tab in tabs %}
            <li class="nav-item">
                <button
                    class="nav-link {{ activeTab == tab.id ? 'active' : '' }}"
                    {{ live_action('changeTab', {'id': tab.id }) }}

                >
                    {{ tab.label }}
                </button>
            </li>
        {% endfor %}
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3">
        <div class="tab-pane fade show active">
            <twig:Molecules:ArticleFromATag :list="this.tabContent" />
        </div>
    </div>
</div>
