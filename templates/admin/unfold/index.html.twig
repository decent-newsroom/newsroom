{% extends 'layout.html.twig' %}

{% block title %}Unfold Sites - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Unfold Sites</h1>
        <a href="{{ path('admin_unfold_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Site
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert">X</button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert">X</button>
        </div>
    {% endfor %}

    {% if sites is empty %}
        <div class="alert alert-info">
            <h5>No Unfold sites configured yet</h5>
            <p class="mb-0">Create your first Unfold site to host a Nostr magazine on a subdomain.</p>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Subdomain</th>
                        <th>Magazine Coordinate</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for site in sites %}
                    <tr>
                        <td>
                            <strong>{{ site.subdomain }}</strong>
                            <br>
                            <a href="http://{{ site.subdomain }}.{{ app.request.host }}"
                               target="_blank"
                               class="text-muted small">
                                {{ site.subdomain }}.{{ app.request.host }}
                                <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </td>
                        <td>
                            <code class="small" style="word-break: break-all;">
                                {{ site.coordinate|length > 50 ? site.coordinate[:50] ~ '...' : site.coordinate }}
                            </code>
                        </td>
                        <td>
                            <small>{{ site.createdAt|date('M j, Y') }}</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_unfold_edit', {id: site.id}) }}"
                                   class="btn mb-0" title="Edit">
                                    Edit
                                </a>
                                <a href="{{ path('admin_unfold_preview', {id: site.id}) }}"
                                   class="btn mb-0" title="Preview">
                                    Preview
                                </a>
                                <form action="{{ path('admin_unfold_delete', {id: site.id}) }}"
                                      method="post"
                                      class="d-inline mb-0"
                                      onsubmit="return confirm('Are you sure you want to delete this site?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="mt-4">
        <h5>How it works</h5>
        <ol class="text-muted">
            <li>Create a root magazine event (kind 30040) with your categories and articles</li>
            <li>Click "New Site" and select your magazine from the dropdown</li>
            <li>Configure your reverse proxy to forward the subdomain to this server</li>
            <li>Add a DNS record pointing the subdomain to your server</li>
        </ol>
        <p class="text-muted small">
            <strong>Note:</strong> Subdomains are resolved dynamically from this database table.
            No code changes or restarts required when adding new sites.
        </p>
    </div>
</div>
{% endblock %}

