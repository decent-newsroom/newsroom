{% extends 'layout.html.twig' %}

{% block title %}Unfold Sites - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Unfold Sites</h1>
        <a href="{{ path('admin_unfold_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Site
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if sites is empty %}
        <div class="alert alert-info">
            <h5>No Unfold sites configured yet</h5>
            <p class="mb-0">Create your first Unfold site to host a Nostr magazine on a subdomain.</p>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Subdomain</th>
                        <th>AppData naddr</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for site in sites %}
                    <tr>
                        <td>
                            <strong>{{ site.subdomain }}</strong>
                            <br>
                            <small class="text-muted">{{ site.subdomain }}.yourdomain.com</small>
                        </td>
                        <td>
                            <code class="small" style="word-break: break-all;">
                                {{ site.naddr|length > 40 ? site.naddr[:40] ~ '...' : site.naddr }}
                            </code>
                        </td>
                        <td>
                            <small>{{ site.createdAt|date('M j, Y') }}</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_unfold_edit', {id: site.id}) }}"
                                   class="btn btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="{{ path('admin_unfold_preview', {id: site.id}) }}"
                                   class="btn btn-outline-secondary" title="Preview">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form action="{{ path('admin_unfold_delete', {id: site.id}) }}"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this site?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="mt-4">
        <h5>How it works</h5>
        <ol class="text-muted">
            <li>Create a root magazine event (kind 30040) with your categories and articles</li>
            <li>Create an AppData event (kind 30078) linking the magazine to a theme</li>
            <li>Add a subdomain mapping here to route requests to your magazine</li>
            <li>Configure DNS to point the subdomain to this server</li>
        </ol>
    </div>
</div>
{% endblock %}

