{{!-- Simple index template compatible with LightnCandy --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{site.title}}</title>
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
</head>
<body class="home-template">
<div class="viewport">

    <header id="gh-head" class="gh-head outer">
        <div class="gh-head-inner inner">
            <div class="gh-head-brand">
                <a class="gh-head-logo" href="{{site.url}}">
                    {{#if site.logo}}
                        <img src="{{site.logo}}" alt="{{site.title}}">
                    {{else}}
                        {{site.title}}
                    {{/if}}
                </a>
            </div>

            <nav class="gh-head-menu">
                {{navigation}}
            </nav>
        </div>
    </header>

    <main id="site-main" class="site-main outer">
        <div class="inner posts">
            <div class="post-feed">
                {{#each posts}}
                <article class="post-card post">
                    {{#if feature_image}}
                    <a class="post-card-image-link" href="{{url}}">
                        <img class="post-card-image" src="{{feature_image}}" alt="{{title}}" />
                    </a>
                    {{/if}}
                    <div class="post-card-content">
                        <a class="post-card-content-link" href="{{url}}">
                            <header class="post-card-header">
                                <h2 class="post-card-title">{{title}}</h2>
                            </header>
                            <div class="post-card-excerpt">
                                <p>{{excerpt}}</p>
                            </div>
                        </a>
                        <footer class="post-card-meta">
                            <time class="post-card-meta-date" datetime="{{published_at}}">{{published_at_formatted}}</time>
                            <span class="post-card-meta-length">{{reading_time}} min read</span>
                        </footer>
                    </div>
                </article>
                {{/each}}
            </div>
        </div>
    </main>

    <footer class="site-footer outer">
        <div class="inner">
            <section class="copyright">
                <a href="{{site.url}}">{{site.title}}</a> &copy; 2026
            </section>
            <div class="gh-powered-by">
                <a href="https://unfold.pub/" target="_blank" rel="noopener">Powered by Unfold</a>
            </div>
        </div>
    </footer>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="{{asset "built/casper.js"}}"></script>
</body>
</html>

