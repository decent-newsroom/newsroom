{{!-- Simple post template compatible with LightnCandy --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{post.title}} - {{site.title}}</title>
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
</head>
<body class="post-template">
<div class="viewport">

    <header id="gh-head" class="gh-head outer">
        <div class="gh-head-inner inner">
            <div class="gh-head-brand">
                <a class="gh-head-logo" href="{{site.url}}">
                    {{#if site.logo}}
                        <img src="{{site.logo}}" alt="{{site.title}}">
                    {{else}}
                        {{site.title}}
                    {{/if}}
                </a>
            </div>

            <nav class="gh-head-menu">
                {{navigation}}
            </nav>
        </div>
    </header>

    <main id="site-main" class="site-main">
        <article class="article post">
            <header class="article-header gh-canvas">
                <h1 class="article-title">{{post.title}}</h1>

                {{#if post.excerpt}}
                    <p class="article-excerpt">{{post.excerpt}}</p>
                {{/if}}

                <div class="article-byline">
                    <div class="article-byline-meta">
                        <div class="byline-meta-content">
                            <time class="byline-meta-date" datetime="{{post.published_at}}">
                                {{post.published_at_formatted}}
                            </time>
                            <span class="byline-reading-time">
                                <span class="bull">&bull;</span> {{post.reading_time}} min read
                            </span>
                        </div>
                    </div>
                </div>

                {{#if post.feature_image}}
                    <figure class="article-image">
                        <img src="{{post.feature_image}}" alt="{{post.title}}" />
                    </figure>
                {{/if}}
            </header>

            <section class="gh-content gh-canvas">
                {{{post.html}}}
            </section>
        </article>
    </main>

    <footer class="site-footer outer">
        <div class="inner">
            <section class="copyright">
                <a href="{{site.url}}">{{site.title}}</a> &copy; 2026
            </section>
            <div class="gh-powered-by">
                <a href="https://unfold.pub/" target="_blank" rel="noopener">Powered by Unfold</a>
            </div>
        </div>
    </footer>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="{{asset "built/casper.js"}}"></script>
</body>
</html>

